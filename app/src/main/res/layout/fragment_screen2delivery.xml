<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen2delivery"
    android:background="#000000">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="383dp"
        android:minHeight="511dp">
        <TextView
            android:id="@+id/txtIdBox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="50dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@+id/doneButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCoinBox2" />

        <TextView
            android:id="@+id/txtCoinBox2"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:background="#FFEBA9"
            android:fontFamily="@font/roboto"
            android:text="GarbageCoins: "
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtInfoBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:layout_marginTop="83dp"
            android:layout_marginBottom="117dp"

            android:background="@drawable/shape"
            android:backgroundTint="@color/colorPrimaryDark"

            android:fontFamily="@font/roboto"
            android:lineSpacingExtra="4sp"
            android:text="Tryk\nnår \nfærdig"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            app:layout_constraintBottom_toTopOf="@+id/newIdButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtIdBox" />

        <Button
            android:id="@+id/newIdButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="5dp"
            android:fontFamily="@font/roboto"
            android:text="Få ny kode"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>