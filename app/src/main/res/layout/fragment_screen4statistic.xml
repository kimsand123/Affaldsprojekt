<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen4statistic"
    android:background="#000000">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="383dp"
        android:minHeight="511dp">


        <Button
            android:id="@+id/hvordanBliverJegBedreButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_roundcorners_dark"
            android:elevation="0dp"
            android:fontFamily="@font/roboto"
            android:text="Hvordan bliver jeg bedre"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/co2TextBox2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textAnalyseBox" />


        <TextView
            android:id="@+id/txtCoinBox1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/text_roundcorners_gold"
            android:fontFamily="@font/roboto"
            android:gravity="top|left"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/beige"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgGoldBox"
            android:layout_width="53dp"
            android:layout_height="0dp"
            android:layout_marginStart="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtCoinBox1"
            app:layout_constraintStart_toStartOf="@+id/txtCoinBox1"
            app:layout_constraintTop_toTopOf="@+id/txtCoinBox1"
            app:layout_constraintVertical_bias="0.444"
            app:srcCompat="@drawable/guldbaricon2" />

        <TextView
            android:id="@+id/textAnalyseBox"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_roundcorners_darkgreen"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical|center_horizontal|center"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/lineChart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCoinBox1" />

        <TextView
            android:id="@+id/co2TextBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_roundcorners_darkgreen"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>




