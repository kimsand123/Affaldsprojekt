<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_focused"
    tools:context=".CoinShopActivity">

    <TextView
        android:id="@+id/txtCoinBox1"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/text_roundcorners_gold"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/gold"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgGoldBox"
        android:layout_width="53dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtCoinBox1"
        app:layout_constraintStart_toEndOf="@+id/tabForGoldImage0"
        app:layout_constraintTop_toTopOf="@+id/txtCoinBox1"
        app:layout_constraintVertical_bias="0.444"
        app:srcCompat="@drawable/guldbaricon2" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCoinBox1"
        app:layout_constraintVertical_bias="0.916">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/coinShop_RecycleView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043" />
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/tabForGoldImage0"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/txtCoinBox1"
        app:layout_constraintEnd_toEndOf="@+id/txtCoinBox1"
        app:layout_constraintStart_toStartOf="@+id/txtCoinBox1"
        app:layout_constraintTop_toTopOf="@+id/txtCoinBox1" />


</android.support.constraint.ConstraintLayout>